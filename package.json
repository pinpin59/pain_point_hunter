  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=shared\" \"npm run dev --workspace=backend\" \"npm run dev --workspace=frontend\"",
    "build": "npm run build --workspace=shared && npm run build --workspace=backend && npm run build --workspace=frontend",
    "start": "npm run start:prod --workspace=backend",
    "test": "npm run test --workspace=backend",
    "db:up": "docker compose up -d db",
    "db:down": "docker compose down",
    "db:logs": "docker compose logs -f db",
    "db:migrate": "npm run prisma:migrate --workspace=backend",
    "db:studio": "npm run prisma:studio --workspace=backend"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  },
